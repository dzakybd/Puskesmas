<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="id.ac.its.puskesmas.FormReg">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Silahkan Daftar Terlebih Dahulu"
        android:id="@+id/title"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:textColor="@android:color/black"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="18sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="30dp"
        android:id="@+id/input_nama"
        android:textAlignment="center"
        android:hint="Nama Lengkap"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:textSize="14sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/input_nama"
        android:layout_alignEnd="@+id/input_nama"
        android:layout_marginTop="30dp"
        android:id="@+id/input_ttl"
        android:hint="Tanggal Lahir"
        android:textAlignment="center"
        android:textSize="14sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="10"
        android:layout_below="@+id/input_ttl"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:id="@+id/input_umur"
        android:hint="Umur"
        android:textSize="14sp"
        android:textAlignment="center" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="30dp"
        android:id="@+id/input_alamat"
        android:textAlignment="center"
        android:hint="Alamat"
        android:textSize="14sp"
        android:layout_below="@+id/input_umur"
        android:layout_alignStart="@+id/input_umur" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/input_alamat"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:id="@+id/input_pekerjaan"
        android:hint="Pekerjaan"
        android:textSize="14sp"
        android:textAlignment="center" />

    <Button
        android:text="Daftar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="34dp"
        android:id="@+id/button_daftar"
         />

</RelativeLayout>
